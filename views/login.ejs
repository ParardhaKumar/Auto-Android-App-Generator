<!DOCTYPE html>
<html>
<head>
    <title>Login</title>

    <!-- Stylesheets -->
    <link rel="stylesheet" type="text/css" href="stylesheets/semantic.min.css">
    <link rel="stylesheet" type="text/css" href="stylesheets/evento.core.css">
    <link rel="stylesheet" type="text/css" href="stylesheets/glide.core.min.css">
    <link rel="stylesheet" type="text/css" href="stylesheets/glide.theme.min.css">
    <!-- <link rel='stylesheet' href='/stylesheets/style.css'/> -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/1.11.8/semantic.min.css"/>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/2.1.3/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/1.11.8/semantic.min.js"></script>
    <script src="https://use.fontawesome.com/82721ff0bc.js"></script>

    <!-- JS files -->

    <!-- JQUERY JAVASCRIPT -->
    <script src="javascripts/jquery-3.2.1.min.js"></script>
    <!-- SEMANTIC JAVASCRIPT -->
    <script src="javascripts/semantic.min.js"></script>
    <!-- GLIDE JAVASCRIPT -->
    <script src="javascripts/glide.min.js"></script>
    <!-- SMOOTH SCROLLING -->
    <script src="javascripts/smooth-scroll.min.js"></script>
    <!-- Client Script -->
    <script type="text/javascript" src="javascripts/evento.core.js"></script>
    <!-- FONT-AWESOME JAVASCRIPT -->
    <script src="https://use.fontawesome.com/82721ff0bc.js"></script>

</head>
<body style="background-image:url(/images/login-bg.jpeg)">

<!-- =============== LOCAL LOGIN FORM =================== -->

<div style="padding-top: 8em">
<div class="ui middle aligned center aligned grid">
  <div class="five wide column">
<form action="/login" method="POST" class="ui large form">
  <div class="ui stacked secondary  segment">
    <h2 class="ui image header">
      <div class="content">
        Log-in to your account
        <br>
      </div>
    </h2>
    <div class="field">
      <div class="ui left icon input">
            <i class="user icon"></i>
            <input type="text" name="email" placeholder="Email">
      </div>
    </div>
    <div class="field">
      <div class="ui left icon input">
        <i class="lock icon"></i>
        <input type="password" name="password" placeholder="Password">
      </div>
    </div>
    <div class="ui fluid large teal submit button">
      Login
    </div>
  </div>
</form>

  <div class="ui message">
     New to us? <a href="/signup">Register</a>
  </div>

  <div class="row">
    <!-- ============== GOOGLE LOGIN BUTTON ================== -->
    <br>
    <form action="/login/google" method="GET">
        <button class="loginBtn loginBtn--google" style="box-shadow: 2px 3px 5px #888888">
              Login with Google
        </button>

    </form>
    <br>
    <!-- ============== FACEBOOK LOGIN BUTTON ================== -->
    <form action="/login/Facebook" method="GET">
        <button class="loginBtn loginBtn--facebook" style="box-shadow: 2px 3px 5px #888888">
            Login with Facebook
        </button>

    </form>

  </div>

 </div>
</div>


</div>
<script type="text/javascript" src="javascripts/script.login.js"></script>
</body>
</html>
